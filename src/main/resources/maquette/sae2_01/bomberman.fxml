<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="maquette.sae2_01.BombermanController">
    <top>
        <VBox styleClass="header-panel">
            <children>
                <Label styleClass="game-title" text="BOMBERMAN" />
                <HBox styleClass="stats-panel">
                    <VBox>

                    <children>
                        <HBox spacing="30">
                        <VBox styleClass="stat-item player1-stats">
                            <children>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <ImageView fx:id="livesIcon" fitWidth="24" fitHeight="24" />
                                    <Label fx:id="livesLabel" text="x3" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                                </HBox>
                                <Label styleClass="stat-label" text="JOUEUR 1" />
                                <Label fx:id="player1BombsLabel" styleClass="stat-value" text="Bombes: 3" />
                            </children>
                        </VBox>
                        <VBox styleClass="stat-item player2-stats">
                            <children>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <ImageView fx:id="livesIcon2" fitWidth="24" fitHeight="24" />
                                    <Label fx:id="livesLabel2" text="x3" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                                </HBox>
                                <Label styleClass="stat-label" text="JOUEUR 2" />
                                <Label fx:id="player2BombsLabel" styleClass="stat-value" text="Bombes: 3" />
                            </children>
                        </VBox>
                        <VBox styleClass="stat-item player3-stats">
                            <children>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <ImageView fx:id="livesIcon3" fitWidth="24" fitHeight="24" />
                                    <Label fx:id="livesLabel3" text="x3" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                                </HBox>
                                <Label styleClass="stat-label" text="JOUEUR 3" />
                                <Label fx:id="player3BombsLabel" styleClass="stat-value" text="Bombes: 3" />
                            </children>
                        </VBox>
                        <VBox styleClass="stat-item player4-stats">
                            <children>
                                <HBox spacing="5" alignment="CENTER_LEFT">
                                    <ImageView fx:id="livesIcon4" fitWidth="24" fitHeight="24" />
                                    <Label fx:id="livesLabel4" text="x3" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                                </HBox>
                                <Label styleClass="stat-label" text="JOUEUR 4" />
                                <Label fx:id="player4BombsLabel" styleClass="stat-value" text="Bombes: 3" />
                            </children>
                        </VBox>
                        </HBox>
                    </children>
                    </VBox>
                </HBox>
                <HBox styleClass="level-panel" alignment="CENTER">
                    <children>
                        <Label fx:id="levelLabel" styleClass="level-text" text="Niveau: 1" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox styleClass="game-panel">
            <children>
                <Canvas fx:id="gameCanvas" height="600.0" onKeyPressed="#handleKeyPressed" onKeyReleased="#handleKeyReleased" width="600.0" />
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox styleClass="controls-panel">
            <children>
                <Label styleClass="controls-title" text="CONTRÔLES" />
                <HBox styleClass="controls-grid" alignment="BASELINE_CENTER">
                    <children>
                        <VBox styleClass="control-group player1-controls">
                            <children>
                            <Label styleClass="control-label" text="JOUEUR 1 (BLEU)" />
                                <Label styleClass="control-keys" text="Z Q S D : Déplacement" />
                                <Label styleClass="control-keys" text="E : Bombe" />
                            </children>
                        </VBox>
                        <VBox styleClass="control-group player2-controls">
                            <children>
                                <Label styleClass="control-label" text="JOUEUR 2 (ROUGE)" />
                                <Label styleClass="control-keys" text="↑ ↓ ← → : Déplacement" />
                                <Label styleClass="control-keys" text="ENTRÉE : Bombe" />
                            </children>
                        </VBox>
                        <VBox styleClass="control-group player3-controls">
                            <children>
                                <Label styleClass="control-label" text="JOUEUR 3 (VERT)" />
                                <Label styleClass="control-keys" text="O K L M : Déplacement" />
                                <Label styleClass="control-keys" text="P : Bombe" />
                            </children>
                        </VBox>
                        <VBox styleClass="control-group player4-controls">
                            <children>
                                <Label styleClass="control-label" text="JOUEUR 4 (ORANGE)" />
                                <Label styleClass="control-keys" text="T F G H : Déplacement" />
                                <Label styleClass="control-keys" text="Y : Bombe" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>